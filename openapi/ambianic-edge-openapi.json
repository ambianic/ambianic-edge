{"openapi": "3.0.2", "info": {"title": "Ambianic Edge OpenAPI", "description": "\nAmbianic Edge API provides OpenAPI(REST) functions for management and access to detection events.\nThis API is mainly intended for secure remote access via [peer.fetch()](https://github.com/ambianic/peerfetch).\nThis API is not intended to be exposed as a public web service.\n\ud83d\ude80\n", "license": {"name": "Apache 2.0", "url": "https://www.apache.org/licenses/LICENSE-2.0.html"}, "version": "1.18.1"}, "paths": {"/api/status": {"get": {"summary": "Get Status", "description": "Returns overall status of the Ambianic Edge device along with\nother device details such as release version.", "operationId": "get_status_api_status_get", "responses": {"200": {"description": "Successful Response", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/StatusResponse"}}}}}}}, "/api/timeline": {"get": {"summary": "Get Timeline", "description": "Get timeline items in groups of 5 in reverse chronographical order.\n\nFor example **page**=1 returns the latest 5 detected events, **page**=2 gets the previous 5 and so on.", "operationId": "get_timeline_api_timeline_get", "parameters": [{"required": false, "schema": {"title": "Page", "type": "integer", "default": 1}, "name": "page", "in": "query"}], "responses": {"200": {"description": "Successful Response", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/TimelineResponse"}}}}, "422": {"description": "Validation Error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/HTTPValidationError"}}}}}}}, "/api/config": {"get": {"summary": "Get Config", "description": "Get the root level configuration settings for this Ambianic Edge device.", "operationId": "get_config_api_config_get", "responses": {"200": {"description": "Successful Response", "content": {"application/json": {"schema": {"title": "Response Get Config Api Config Get", "type": "object"}}}}}}}, "/api/device/display_name": {"get": {"summary": "Get Device Display Name", "description": "Get the user friendly display name for this Ambianic Edge device.", "operationId": "get_device_display_name_api_device_display_name_get", "responses": {"200": {"description": "Successful Response", "content": {"application/json": {"schema": {"title": "Response Get Device Display Name Api Device Display Name Get", "type": "string"}}}}}}}, "/api/device/display_name/{display_name}": {"put": {"summary": "Set Device Display Name", "description": "Set a user friendly dispaly name for this Ambianic Edge device.", "operationId": "set_device_display_name_api_device_display_name__display_name__put", "parameters": [{"required": true, "schema": {"title": "Display Name", "type": "string"}, "name": "display_name", "in": "path"}], "responses": {"204": {"description": "Successful Response"}, "422": {"description": "Validation Error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/HTTPValidationError"}}}}}}}, "/api/notifications/test": {"get": {"summary": "Test Notifications", "description": "Run a live test with configured notification providers and return status result.", "operationId": "test_notifications_api_notifications_test_get", "responses": {"200": {"description": "Successful Response", "content": {"application/json": {"schema": {"title": "Response Test Notifications Api Notifications Test Get", "type": "string"}}}}}}}, "/api/integrations/ifttt/api_key/{api_key}": {"put": {"summary": "Set Ifttt Api Key", "description": "Set API_KEY for the IFTTT integration.", "operationId": "set_ifttt_api_key_api_integrations_ifttt_api_key__api_key__put", "parameters": [{"required": true, "schema": {"title": "Api Key", "type": "string"}, "name": "api_key", "in": "path"}], "responses": {"204": {"description": "Successful Response"}, "422": {"description": "Validation Error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/HTTPValidationError"}}}}}}}, "/api/notifications/enable/{enable}": {"put": {"summary": "Enable Notifications", "description": "Enable or disable all notifications.", "operationId": "enable_notifications_api_notifications_enable__enable__put", "parameters": [{"required": true, "schema": {"title": "Enable", "type": "boolean"}, "name": "enable", "in": "path"}], "responses": {"204": {"description": "Successful Response"}, "422": {"description": "Validation Error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/HTTPValidationError"}}}}}}}}, "components": {"schemas": {"HTTPValidationError": {"title": "HTTPValidationError", "type": "object", "properties": {"detail": {"title": "Detail", "type": "array", "items": {"$ref": "#/components/schemas/ValidationError"}}}}, "StatusResponse": {"title": "StatusResponse", "type": "object", "properties": {"version": {"title": "Version", "type": "string", "description": "Ambianic Edge software version."}, "display_name": {"title": "Display Name", "type": "string", "description": "User friendly display name for this device."}, "notifications_enabled": {"title": "Notifications Enabled", "type": "boolean", "description": "Indicates whether device notifications are enabled.", "default": false}, "status": {"title": "Status", "type": "string", "default": "OK"}}, "description": "Combines API status response and device info to reduce remote calls in common use cases."}, "TimelineResponse": {"title": "TimelineResponse", "type": "object", "properties": {"status": {"title": "Status", "type": "string", "default": "OK"}, "timeline": {"title": "Timeline", "type": "array", "items": {"type": "object"}, "description": "List of detection events"}}}, "ValidationError": {"title": "ValidationError", "required": ["loc", "msg", "type"], "type": "object", "properties": {"loc": {"title": "Location", "type": "array", "items": {"type": "string"}}, "msg": {"title": "Message", "type": "string"}, "type": {"title": "Error Type", "type": "string"}}}}}}
